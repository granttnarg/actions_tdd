[flake8]
# Set max line length to 88 (black's default)
max-line-length = 88

# Ignore some common issues
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by max-line-length)

# Exclude directories and files we don't want to lint
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    docs/build,
    migrations

# Only check your actual project files
filename = *.py

# Set complexity threshold
max-complexity = 10